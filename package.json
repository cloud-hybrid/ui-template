{
    "name": "@cloud-technology/ui-template",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "setup": "node .ci",
        "sass": "sass --watch ./src --load-path ./node_modules/@carbon --load-path node_modules --load-path .",
        "clean-css": "find . -type f -name \"*.css\" -delete && find . -type f -name \"*.css.map\" -delete",
        "analyze": "npm run build --production && source-map-explorer \"build/static/js/*.js\"",
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "start": "react-scripts start",
        "test": "react-scripts test"
    },
    "dependencies": {
        "@carbon/elements": "^10.45.0",
        "@carbon/feature-flags": "^0.6.0",
        "@carbon/grid": "^10.38.0",
        "@carbon/ibm-cloud-cognitive": "^0.93.1",
        "@carbon/icons-react": "^10.41.0",
        "@carbon/react": "^0.7.0",
        "axios": "^0.21.4",
        "axios-cache-adapter": "^2.7.3",
        "carbon-components": "^10.46.0",
        "carbon-components-react": "^7.46.0",
        "localforage": "^1.10.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.3.0",
        "react-scripts": "^4.0.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.32.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-plugin-flowtype": "^5.10.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^24.7.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-testing-library": "^3.10.2",
        "html-webpack-plugin": "^5.5.0",
        "postcss-normalize": "^10.0.1",
        "prop-types": "^15.7.2",
        "sass": "1.38.2",
        "serve": "^12.0.1",
        "source-map-explorer": "^2.5.2",
        "web-vitals": "^2.1.0",
        "webpack": "^5.60.0",
        "webpack-cli": "^4.9.1"
    },
    "eslintConfig": {
        "ecmaFeatures": {
            "arrowFunctions": true,
            "classes": true,
            "generators": true,
            "defaultParams": true,
            "experimentalObjectRestSpread": true,
            "blockBindings": true,
            "globalReturn": false,
            "restParams": true,
            "destructuring": true
        },
        "extends": [
            "react-app",
            "react-app/jest",
            "shared-config"
        ],
        "rules": {
            "rest-spread-spacing": [
                true
            ]
        },
        "overrides": [
            {
                "files": [
                    "**/*.ts?(x)"
                ],
                "rules": {
                    "additional-typescript-only-rule": "warn"
                }
            }
        ]
    },
    "browserslist": [
        "last 1 version"
    ],
    "homepage": "/"
}
